---
import { getFilteredCollectionEntries } from "@lib/utils";
import AreasOfInvestmentsCardButton from "@components/AreasOfInvestmentsCardButton.astro";
import RootPageIndex from "@components/RootPageIndex.astro";
import { AREAS_OF_INVESTMENTS } from "@consts";
import PageNavigation from "@components/PageNavigation.astro";

export async function getStaticPaths({ paginate }: { paginate: any }) {
  const { entries } = await getFilteredCollectionEntries("areasOfInvestments");
  const posts = entries.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));

  return paginate(posts, { pageSize: AREAS_OF_INVESTMENTS.pageSize });
}

const { page } = Astro.props as {
  page: { data: { props: any }[]; currentPage: number; lastPage: number };
};

const entries = page.data.map((pageEntry) => ({
  ...pageEntry.props,
}));
---

<RootPageIndex title="Areas of Investments">
  {
    (
      <ul class="animate not-prose mb-12 flex flex-col gap-4">
        {entries.map((entry) => (
          <li>
            <AreasOfInvestmentsCardButton entry={entry} />
          </li>
        ))}
      </ul>
    )
  }
  <PageNavigation page={page} />
</RootPageIndex>
